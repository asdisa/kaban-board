{
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": ["jsdoc","closure"]
    },
    "source": {
        "include": ["src"],
        "exclude": [
            ".git",
            "node_modules"
        ],
        "includePattern": ".+(\\.js(doc|x)?)$"
    },
    "plugins": [
        "plugins/markdown"
    ],
    "templates": {
        "cleverLinks": true,
        "monospaceLinks": true,
        "default": {
            "outputSourceFiles": true,
            "includeDate": false,
            "staticFiles": {
                "paths": ["./src/img/"]
            }
        }
    },
    "opts": {
        "encoding": "utf8",
        "template": "node_modules/better-docs",
        "destination": "docs",
        "recurse": true,
        "readme": "README.md"
    }
}